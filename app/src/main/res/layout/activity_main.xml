<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Activities.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_backboard" />

    <include
        android:id="@+id/toolBar"
        layout="@layout/tool_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/play"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:elevation="10dp"
            android:src="@drawable/ic_play"
            android:textColor="@color/google_green"
            android:textSize="45sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/multiplayer"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:elevation="10dp"
            android:src="@drawable/ic_multiplayer"
            android:textColor="@color/google_blue"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/options"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_options"
            android:elevation="10dp"
            android:textColor="@color/google_yellow"
            android:textSize="35sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/login"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            android:src="@drawable/ic_login"
            android:textColor="@color/google_blue"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            android:visibility="gone"
            android:src="@drawable/ic_settings"
            android:textColor="@color/grey"
            android:textSize="35sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/signOut"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            android:src="@drawable/ic_signout"
            android:textColor="@color/grey"
            android:textSize="35sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>